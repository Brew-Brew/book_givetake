

    
    <h2>펜션후기</h2>
    <hr>
    <div style="text-align:right">
        <p>
        <%= button_to '새글',new_post_path, method: :get, class:"btn btn-success"%>
        </p>
    <div class="row">
        <% @posts.each do |p| %>
      <div class="col-sm-6 col-md-4" >
          
            <div class="thumbnail" >
                
                  <img src="<%=p.avatar.url %>" alt="..." class="image_field">
                  <div class="caption">
                    <h3><%= p.title %></h3>
                    <!--a 태그를 써준 이유는 a태그가 inline속성을 가지므로. link_to는 form태그로 묶이므로 block속성-->
                    <a href="/posts/<%=p.id %>" class="btn btn-success" role="button">글보기</a>
                    <a href="/posts/<%=p.id %>" class="btn btn-success" role="button" data-method="delete">삭제</a>
                    
                  </div>
              
            </div>
          
      </div>
       <% end %>
    </div>

<%= will_paginate @posts %>


  
  