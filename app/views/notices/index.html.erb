                </thead>
                <tbody>
                    <% @posts.each do |onePost| %>
                        <tr>
                            
                            <td>
                                <%= link_to onePost.title, onePost %>
                            </td>
                            <td>
                                <%if user_signed_in? %>
                                <%= link_to '',edit_notice_path(onePost), class: "glyphicon glyphicon-pencil" %>&nbsp;
                                <%= link_to '', onePost ,method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-remove" %>
